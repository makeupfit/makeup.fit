header
  width: 100%
  position: fixed
  display: table
  z-index: 10
  top: 0
  left: 0
  opacity: .9

  a#home
    height: 40px
    margin: 40px
    margin-right: 0
    display: block
    float: left

    +below(800px)
      margin: 20px

    +below(600px)
      height: 30px
      margin: 25px

  .logo
    height: 100%

  nav
    &.left
      float: left

    &.right
      float: right

    &.links
      a
        display: inline-block
        margin: 47px 20px

        +below(600px)
          display: none

    &.buttons
      .button
        height: 48px
        line-height: 1.5em
        margin: 36px 40px 36px 20px
        color: $textColor2

        +below(800px)
          height:32px
          line-height: .75em
          margin: 24px 20px

        +below(600px)
          margin-left: 0
          span:last-child
            display: none

  .menu-button
    font-size: 40px
    line-height: 40px
    height: 40px
    margin: 15px
    display: block
    float: right
    cursor: pointer

    +above(601px)
      display: none

